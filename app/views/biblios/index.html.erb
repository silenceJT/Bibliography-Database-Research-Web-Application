
<p id="notice"><%= notice %></p>

<h1 class="text-center">Biblios</h1>

<div class="float-right">
  <%= link_to 'Add New Biblio', new_biblio_path, class: "btn btn-outline-primary" %>
</div>


<table class="table table-striped table-bordered table-hover">
  <thead class="thead-inverse">
    <tr>
      <th>Author</th>
      <th>Year</th>
      <th>Title</th>
      <th colspan="3">Functions</th>
    </tr>
  </thead>

  <tbody>
    <% @biblios.each do |biblio| %>
      <tr>
        <td><%= biblio.author %></td>
        <td><%= biblio.year %></td>
        <td><%= biblio.title %></td>
        <td><%= link_to 'Show', biblio, class: "btn btn-outline-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_biblio_path(biblio), class: "btn btn-outline-info btn-sm" %></td>
        <td><%= link_to 'Delete', biblio, method: :delete, data: { confirm: 'Are you sure?' },
                                            class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

