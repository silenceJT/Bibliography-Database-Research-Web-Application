<div class="row">
    <div class="col-lg-6">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for..." aria-label="Search for...">
        <span class="input-group-btn">
          <%= link_to "go!", '#', class: "btn btn-primary" %>
        </span>
      </div>
    </div>
</div>

<br>

<form class="form-inline">
<div class="form-group">
  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search for..." %>
</div>
<div class="form-group">
  <%= submit_tag "Search", class: "btn btn-primary" %>
</div>
</form>


<div class="input-group" id="search-id" >
  <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="Search">
  <div class="input-group-btn">
    <button class="btn btn-primary" type="submit">
      <i class="glyphicon glyphicon-search"></i>
    </button>
  </div>
</div>
